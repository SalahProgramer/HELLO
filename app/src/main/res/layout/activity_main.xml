<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eee"
    android:backgroundTintMode="screen"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/m"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        android:textAlignment="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="40px"
            android:layout_marginRight="40px"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:text="Number 1: "
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editTextNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/alike_angular"
                android:hint="Enter the number 1"
                android:inputType="number"
                android:shadowColor="@color/purple_700"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorLink="@color/purple_700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="40px"
            android:layout_marginRight="40px"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:text="Number 2 : "
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:ems="10"
                android:fontFamily="@font/alike_angular"
                android:hint="Enter the number 2"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorLink="@color/purple_700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="40px"
            android:layout_marginRight="40px"
            android:layout_marginBottom="40px"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:text="Operation : "
                android:textColor="@color/purple_700"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/alike_angular"
                android:hapticFeedbackEnabled="true"
                android:hint="Enter the operation"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textColorHighlight="@android:color/holo_red_dark"
                android:textColorLink="@color/purple_700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animationCache="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:textAlignment="center">

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                app:cornerRadius="40px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40px"
            android:layout_marginStart="40px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="40px"
            android:layout_marginEnd="40px"
            android:layout_marginRight="40px"
            android:layout_marginBottom="40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alike_angular"
                android:text="The result : "
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:cursorVisible="false"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:fontFamily="@font/alike_angular"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/purple_700"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>